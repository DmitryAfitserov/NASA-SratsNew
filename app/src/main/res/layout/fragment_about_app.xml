<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linear_layout_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/name_app"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"

                android:text="@string/name_app"
                android:textSize="24sp"

                />

            <TextView
                android:id="@+id/about_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"

                android:text="@string/about_app"
                android:textSize="16sp"
                />



            <TextView
                android:id="@+id/data_from_nasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"

                android:text="@string/data_from_nasa"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/original_language_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"

                android:text="@string/original_language"
                android:textSize="16sp"
                />



            <TextView
                android:id="@+id/translate_by_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"

                android:text="@string/translate_service"
                android:textSize="16sp"


                android:linksClickable="true"
                android:textColorLink="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/app_in_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"

                android:text="@string/app_in_market"
                android:textSize="16sp"

                android:clickable="true"

                android:textColorLink="@color/colorBlueText"
                />

    </LinearLayout>


</ScrollView>